<h1>Great Eats!</h1>

<h2>Great Eats that are NOT devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{!-- {{> burgers/burger-block devoured=true}} --}}
      <button class="burger" data-id={{this.id}}>{{this.burger_name}}</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Great Eats that are ARE devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
      {{!-- {{> burgers/burger-block devoured=false}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Great Eats Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured!
  </div> 
</form>

 <button class="submitBurger">Add </button>
